<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvFotoMascota"
    android:layout_width="125dp"
    android:layout_height="160dp"
    android:layout_marginBottom="7dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margen_cardview"
            android:layout_marginRight="@dimen/margen_cardview"
            android:layout_marginTop="@dimen/margen_cardview"
            android:layout_marginLeft="@dimen/margen_cardview"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >
                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_cardview"
                    android:text="@string/prating"
                    android:textSize="15dp"

                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/ibRating"
                    android:layout_marginRight="@dimen/margen_cardview"
                    android:background="@drawable/bone_flat"
                    android:layout_marginBottom="@dimen/margen_cardview"

                    />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
