<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/layout_heigth"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imagen_heigth"
            android:src="@drawable/tom"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margen_cardview"
            android:layout_marginRight="@dimen/margen_cardview"
            android:layout_marginTop="@dimen/margen_cardview"
            android:layout_marginLeft="@dimen/margen_cardview"

            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


                <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >




                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/ibRate"
                            android:background="@drawable/bone"
                            android:layout_marginLeft="@dimen/margen_cardview"
                            android:layout_marginRight="@dimen/margen_cardview"
                            />


                        <TextView
                            android:id="@+id/tvNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pnombre"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_cardview"
                            android:layout_marginRight="@dimen/margen_cardview"
                         />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    >

                    <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margen_cardview"
                            android:text="@string/prating"
                            android:textSize="@dimen/textsize_cardview"
                         />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/ibRating"
                            android:layout_marginRight="@dimen/margen_cardview"
                            android:background="@drawable/bone_flat"
                            />
                </LinearLayout>
         </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

